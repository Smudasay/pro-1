<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app7.say.application.QuranActivity"
    android:background="@drawable/bg_say"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quran2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="القرآن الكريم"
        android:textColor="#607d8b"
        android:textSize="40sp"
        android:background="#80f1f8e9"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/surah_nas3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="สูเราะฮฺ อัน-นาส"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
    />
    <TextView
        android:id="@+id/surah_falak3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="สูเราะฮฺ อัล-ฟะลัก "
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:background="#50f5f5f5"
        android:layout_marginTop="@dimen/margin_top_text"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/surah_ikhalas3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="สูเราะฮฺ อัล-อิคลาศ"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
        />
</LinearLayout>
