<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app7.say.application.MusyidActivity"
    android:background="@drawable/bg_say"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/musyid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="คุตบะห์วันศุกร์"
        android:textSize="40sp"
        android:textColor="#607d8b"
        android:background="#80f1f8e9"
        android:padding="8dp"
    />

    <TextView
        android:id="@+id/musyid3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="มุสลิม...ผู้นอบน้อมอ่อนโยน"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/musyid4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ความละอายเป็นส่วนหนึ่งของการศรัทธา"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/musyid5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="คุณธรรมต่อเพื่อนบ้าน"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/musyid6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="การทักทายด้วยการกล่าวและรับสลาม"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/musyid7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ดุอาคืออิบาดะห์"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/musyid8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ส่วนหนึ่งจากเหตุการณ์ในเดือนรอยับ"
        android:textSize="20sp"
        android:textColor="#607d8b"
        android:layout_marginTop="@dimen/margin_top_text"
        android:background="#50f5f5f5"
        android:padding="15dp"
        />



</LinearLayout>
